{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
          "es2019",
          "DOM",
          "DOM.Iterable"
        ],
        "target": "es2019",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "incremental": true,
        "noImplicitAny": true
    },
    "exclude": [
      "node_modules"
    ]
}
